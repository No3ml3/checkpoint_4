{% extends 'admin.html.twig' %}

{% block title %}Tous les utilisateurs
{% endblock %}

{% block body %}
	<h1>Tous les utilisateurs</h1>

	<a href="{{ path('app_user_new') }}">Ajouté un nouvelle utilisateur</a>

	<table class="table">
		<thead>
			<tr>
				<th>Email</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.email }}</td>
					<td>{{ user.firstName }}</td>
					<td>{{ user.lastName }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>I
					<td>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Aucun utilisateur trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
