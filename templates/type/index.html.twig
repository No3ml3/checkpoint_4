{% extends 'admin.html.twig' %}

{% block title %}Tous les genre{% endblock %}

{% block body %}
    <h1>Tous les genre</h1>

    <a href="{{ path('app_type_new') }}">Ajouté un genre</a>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.name }}</td>
                <td>
                    <a href="{{ path('app_type_edit', {'id': type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun genre trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
